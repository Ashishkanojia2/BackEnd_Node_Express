<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheet/styleSheet.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
  </head>
  <body>
    <div class="bg-zinc-900 w-full h-full text-white">
      <a href="/" class="text-blue-500 , text-lx"> Back to Home</a>
      <h1 class="text-3xl tracking-tight p-10">All Users</h1>
      <div class="user flex gap-3 flex-wrap">
        <% if(user.length > 0 ){%> <% user.forEach((val)=>{%>
        <div class="max-w-72 p-4 bg-zinc-700 m-3">
          <div class="w-full h-52 rounded-md bg-red-400 overflow-hidden">
            <img class="w-full h-full object-cover" src="<%= val.image%>" />
          </div>
          <p class="text-xl mt-3, tracking-tight"><%=val.name%></p>
          <p class="text-zinc-500"><%=val.email%></p>
          <div class="mt-3">
            <a href="/edit/<%=val._id%>" class="text-blue-500 rounded-md px-10 py-0.5"> Edit</a>
            <a
              href="/deleteUser/<%=val._id%>"
              class="text-red-600 rounded-md px-10 py-0.5"
            >
              Delete
            </a>
          </div>
        </div>

        <% })%> <%}else{%>
        <div class=" w-full h-52 px-40">
          <h1 class="text-3xl text-zinc-600">No Data found..!</h1>
        </div>
        <%}%>
      </div>
    </div>
  </body>
</html>
