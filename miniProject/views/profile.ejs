<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
  </head>
  <body>
    <div class="w-full bg-zinc-900 text-black p-10">
      <div class="w-full flex justify-end">
        <a href="/logout" class="bg-red-600 text-zinc-300 rounded-md px-10">
          logout
        </a>
      </div>
      <h3 class="text-2xl text-white mb-8">Profile</h3>
      <h1 class="text-4xl text-white mb-5">Hello, <%= user.name %></h1>
      <form action="/post" method="post">
        <textarea
          placeholder="what's in your mind"
          name="content"
          class="w-1/2 border-2 border-zinc-700 outline-none rounded-md bg-transparent px-5 py-5 mb-10 text-zinc-300"
        ></textarea>
        <input
          type="submit"
          value="Create This"
          class="bg-blue-800 block rounded-md , w-50 px-10 py-3 text-white"
        />
      </form>
      <div class="py-10">
        <H1 class="text-zinc-500 text-2xl mb-10">Here is your Post </H1>
        <%user.posts.reverse().forEach(function(post){%>
        <div
          class="postContainer mb-5 bg-zinc-800 border-2 border-zinc-700 w-1/3 rounded-md text-white p-5"
        >
          <p class="font-bold text-lg text-blue-400">@<%=user.username%></p>
          <p class="text-zinc-300"><%= post.Content%></p>
          <small> <%= post.likes.length %> likes </small>
          <div class="flex gap-4">
            <a href="/like/<%= post._id %>" class="text-blue-400">
              <%= post.likes.indexOf(user._id) === -1 ? "Like" : "UnLike" %>
            </a>
            <a href="/edit/<%= post._id %>" class="text-zinc-400">edit </a>
          </div>
        </div>

        <%})%>
      </div>
    </div>
  </body>
</html>
