<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form p-10 text-white">
        <div>
          <form action="/create" method="post">
            <input
              class="block px-20 py-3 bg-zinc-600 w-full rounded-md outline-none"
              type="text"
              placeholder="Enter Title here.."
              name="title"
            />
            <textarea
              class="block px-20 py-3 bg-zinc-600 w-full rounded-md outline-none resize-none mt-2"
              placeholder="write Something here.."
              name="details"
            ></textarea>
            <input
              class="mt-2 bg-blue-800 px-5 py-2 rounded-md"
              type="submit"
              value="Create Task"
            />
          </form>
        </div>
        <div class="task p-10 flex gap-5 flex-wrap">
          <% if(files.length>0){%> <% files.forEach((val)=>{%>
          <div class="task w-80 bg-zinc-700 px-3 py-4 rounded-md">
            <h1 class="text-2xl tracking-tighter"><%= val %></h1>
            <div class="justify-between w-full  " >
              <a href="/files/<%= val %>" class="text-blue-500 inline-block"
                >Read more..</a
              >
              <a href="/edit/<%= val %>" class="text-zinc-400 inline-block"
                >edit</a
              >
            </div>
          </div>
          <%})%> <%}else{%>
          <h3 class="text-zinc-400 text-2xl">No tasks yet...</h3>
          <% }%>
        </div>
      </div>
    </div>
  </body>
</html>
